<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:id="@+id/card_img_news_shimmer"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/img_news_shimmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/gray"
                    android:scaleType="centerCrop">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_news_shimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/img_favorite_shimmer"
                android:layout_toRightOf="@+id/card_img_news_shimmer"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>
            <TextView
                android:id="@+id/txt_news1_shimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/img_favorite_shimmer"
                android:layout_toRightOf="@+id/card_img_news_shimmer"
                android:layout_below="@+id/txt_news_shimmer">

            </TextView>
            <TextView
                android:id="@+id/txt_news2_shimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/img_favorite_shimmer"
                android:layout_toRightOf="@+id/card_img_news_shimmer"
                android:layout_below="@+id/txt_news1_shimmer">

            </TextView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_favorite_shimmer"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_favorite_shimmer">

            </de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>